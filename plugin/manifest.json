{
  "manifest_version": 2,
  "name": "Timebox Timer",
  "version": "1.2.0",

  "description": "Shows a timer as overlay to Firefox browser window",

  "icons": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
  },

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_popup": "popup/start-timer.html",
    "default_title": "Start timbox timer",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "64": "icons/64.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    }
  }

}